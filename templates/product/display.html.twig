{% extends "base.html.twig" %}

{% block title %}
	Tous nos véhicules d'occasion
{% endblock %}

{% block body %}
	<h1>Tous nos véhicules d'occasion :</h1>
	<div class="js-filter">
		<div class="row">
			<div class="col-md-3">
				{% include "_partials/_filter.html.twig" %}
			</div>
			<div class="col-md-9 mt-5 mt-md-0">
				{# Display number of items from search criteria #}
				<div class="d-flex w-100 mb-2">
					<div class="col-md-3">
						<div class="fw-bold fs-4 text-primary" id="totalItems">
							{{ totalItems }}
							Résultats
						</div>
					</div>
					<div class="d-flex w-100 mb-2 justify-content-end me-2 js-filter-sorting">
						{% include "product/_sorting.html.twig" %}
					</div>
				</div>
				{# end of display #}
				<div class="col-md-12">
					<div class="d-flex flex-wrap js-filter-content">
						{% include "product/_products.html.twig" %}
					</div>
				</div>
				<div class="d-flex flex-row-reverse">
					<div class="col-md-12 px-1 js-filter-pagination">
						{% include "product/_pagination.html.twig" %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
